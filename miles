#include <iostream>
using namespace std;

int main()
{
  float kilometers;
  cout << "Enter the number of kilometers: ";
  cin >> kilometers;

  float miles;
  miles = 0.621371 * kilometers;
  cout << "Miles: " << miles << endl;

  return 0;
}

